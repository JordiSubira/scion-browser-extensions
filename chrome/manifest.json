{
  "name": "SCION Browser Extension",
  "version": "1.0",
  "description": "Build an Extension!",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "proxy",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://*/*",
    "http://localhost/*"
  ],
  "omnibox": { "keyword" : "scion" },
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "SCION extension",
    "default_icon": "images/scion.ico"
  },
  "icons": {
    "16": "images/scion-0.jpg",
    "32": "images/scion-1.jpg",
    "48": "images/scion-2.jpg",
    "128": "images/scion-3.jpg"
  },
  "manifest_version": 2
}
